<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/head'); %>
</head>
<body class="container">

<header>
    <%- include('../views/header'); %>
</header>

<main>
    <div class="container mt-3">
    <table id="test_table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome da Sprint</th>
                <th>Total de atividades</th>
                <th>Conclu√≠das</th>
                <th><i class="icon_cogs"></i> Action</th>
              
            </tr>
        </thead>
        <tbody id="ListSprint">
        <% list.forEach(function(idList){ %>
            <tr>
                
                <td><a href=<%= idList.shortUrl %> target="_blank"><%= idList.name %></a></td>
                <td><%= idList.badges.checkItems %></td>
                <td><%= idList.badges.checkItemsChecked %></td>
                
                <td>
                    <div class="btn-group">
                      <a class="btn btn-primary" href="/tarefas?cardid=<%= idList.shortLink %>">Listar</a>
                    </div>
              </td>
                
                
                
                
            </tr>
        <% }); %>
        </tbody>    
      </table>
      <script>
        var tables = document.getElementsByTagName('table');
        var table = tables[tables.length - 1];
        var rows = table.rows;
        for(var i = 1, td; i < rows.length; i++){
            td = document.createElement('td');
            td.appendChild(document.createTextNode(i + 1));
            rows[i].insertBefore(td, rows[i].firstChild);
        }
    </script>

                  
    </div>
</main>

<footer>
    <%- include('../views/footer'); %>
</footer>

</body>
</html>
